<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
            android:id="@+id/img_root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/net_maker"
                android:src="@mipmap/net_maker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView

                android:paddingLeft="1dp"
                android:textStyle="bold"
                android:layout_marginTop="19dp"
                android:layout_centerHorizontal="true"
                android:textSize="8sp"
                android:text="20"
                android:id="@+id/tv_maker_num"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        />


    </RelativeLayout>


    <TextView
            android:padding="2dp"
            android:layout_marginLeft="-12dp"
            android:textSize="12sp"
            android:background="@drawable/bt_maker_shape"
            android:layout_toRightOf="@id/img_root"
            android:text="沙坪镇(2)"
            android:id="@+id/tv_maker"
            android:textColor="@color/login_text_color5"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

    />

</RelativeLayout>