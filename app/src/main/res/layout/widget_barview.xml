<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorAccent"
    >

    <ImageView
            android:id="@+id/barview_logo"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/nav_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/barview_logo"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:text="1.0.1"
            android:id="@+id/versionname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
          android:id="@+id/barview_view"
          android:layout_marginLeft="50dp"
          android:layout_toRightOf="@id/barview_logo"
          android:background="@color/main_text_color1"
          android:layout_width="1dp"
          android:layout_height="match_parent"

    />

    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/barview_view"
            android:id="@+id/barview_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView

            android:id="@+id/barview_user"
            android:layout_marginRight="20dp"
            android:drawableRight="@mipmap/downpush"
            android:textStyle="bold"
            android:textColor="@color/main_text_color2"
            android:drawablePadding="12dp"
            android:drawableLeft="@mipmap/photo_profile"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


    />

</RelativeLayout>